<h2>Auto closing for Code</h2>
<% if index>100 %>
  <div class="bigger">bigger than 100</div>
<% elsif index>50 %>
  <div class="bigger">bigger than 50 but less than 100</div>
<% else %>
  <div class="less">less than 50</div>
<% end %>
<div class="common">
  Common Tag
</div> 
<h2>Example 1 - HAML:</h2>
<div id="content">
  <h1>menu</h1>
  <ul>
    <li>menu 1</li>
    <li>menu 2</li>
  </ul> 
</div> 
<div id="content">
  <h1>menu</h1>
  <ul>
    ^ menu 1; menu 2  
  </ul> 
</div> 
<div id="content">
  <h1>menu</h1>
  ["</ul>"]  <ul*attr*>
    ^menu 1; menu 2
</div> 
<h2>Example 2 - Form input</h2>
<h1>New user</h1>
<%= error_messages_for :user %>
<% form_for @user do |f| %>
  <p>
    <b>Name</b>
    <br/>
    <%= f.text_field :name %>
  </p> 
  <p>
    <b>Email</b>
    <br/>
    <%= f.text_field :email %>
  </p> 
  <p>
    <b>Last login</b>
    <br/>
    <%= f.datetime_select :last_login %>
  </p> 
  <p>
    <%= f.submit "Create" %>
  </p> 
<% end %>
<%= link_to 'Back', users_path %>
